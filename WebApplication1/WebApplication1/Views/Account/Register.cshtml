}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
</head>
<body>
    <div class="container">
        <br />
        <h2>Kayıt Ol</h2>
        <div class="form-group col-md-3 container">
            <form method="post">
                <label>Ad:</label>
                <input type="text" name="ad" class="form-control" required />
                <br />
                <label>Soyad:</label>
                <input type="text" name="soyad" class="form-control" required />
                <br />
                <label>Email:</label>
                <input type="text" name="email" class="form-control" required />
                <br />
                <label>KullanıcıAdı:</label>
                <input type="text" name="kullanıcıadı" class="form-control" required />
                <br />
                <label>Şifre:</label>
                <input type="password" name="şifre" class="form-control" required />
                <br />
                <label>Şifre Tekrar:</label>
                <input type="password" name="şifretekrar" class="form-control" required />
                <br />
                <button class="btn btn-secondary" id="btn1">Kayıt Ol</button>
              
               
            </form>
            
            

        </div>
    </div>
</body>
</html>

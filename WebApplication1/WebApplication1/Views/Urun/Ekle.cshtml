@model  WebApplication1.Models.Urun
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ekle</h2>
@using (Html.BeginForm ("Ekle", "Urun", FormMethod.Post, new { enctype = "multipart/Form-data" }))
{
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Ad</label>
                    <input type="text" name="Ad" class="form-control" />

                    <div class="form-group">
                        <label>Açıklama</label>
                        <input type="text" name="Açıklama" class="form-control" />
                    </div>
                    <div class="form-group">
                        @Html.Label("Resim", new { @class = "control-label col-md-2" })
                        <input type="file" name="File" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Stok</label>
                        <input type="text" name="Stok" class="form-control" />
                    </div>
                    <div class="form-group">
                    <label>Kategori</label>
                        @Html.DropDownListFor(x => x.KategoriId, (List<SelectListItem>) ViewBag.ktgr, new { @class = "form-control" })
                    <input type="text" name="Kategori" class="form-control" />
                        <button class="btn btn-primary" type="submit">Ekle</button>
                        <a href="/Urun/Index">Ürün Listesi</a>
                </div>
                </div>
    </div>
        </div>
        </div>
        
}


